        homeBudget.addBudget("12", "2013");
        
        function createChartObject(month, year, value1, value2) {
            var object = {
                data: [month + "/" + year, value1, value2],
            }
            return object;
        }

        var dataArray = [];
        dataArray.push(["Date", "Incomes", "Expenses"]);
        for (var i = 1; i <= 12; i++) {
            var dataObject = createChartObject(i, "2013", homeBudget.getIncomes(i, "2013"), homeBudget.getExpenses(i, "2013")).data;
            dataArray.push(dataObject);
        }

        google.load("visualization", "1", { packages: ["corechart"] });
        google.setOnLoadCallback(drawChart);
        function drawChart() {
            var data = google.visualization.arrayToDataTable(dataArray);

            var options = {
                title: 'Budget Chart Test'
            };

            var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>
