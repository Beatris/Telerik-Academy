<style type="text/css">
    label {
        min-width: 80px;
        display: inline-block;
    }
</style>
<div data-role="fieldcontain" id="select-account-menu">
    <label for="selectmenu2">
        Type:         
    </label>
    <select id="type" id="selectmenu2" name="Type" data-theme="d">
        <option value="debit" data-theme="b">Debit Card
    </option>
        <option value="credit" data-theme="b">Credit Card
    </option>
        <option value="bank" data-theme="b">Bank Account
    </option>
    </select>
</div>
<div data-role="fieldcontain">
    <label for="textinput2">
        Name:
    </label>
    <input name="" id="name" placeholder="A name for the account" value="" type="text" data-mini="true" />
</div>
<div data-role="fieldcontain">
    <label for="textinput3">
        Balance:           
    </label>
    <input name="" id="balance" placeholder="Current balance" value="" type="text" data-mini="true" />
</div>
<div data-role="fieldcontain", id="addAccountButton">
    <label>
        Date:           
    </label>                
    <input type="text" placeholder="Expiry date" id="datepicker" date-picker/>
</div>
<div data-role="fieldcontain", id="addAccountButton">
    <button id='addCardButton'>Add</button>
</div>