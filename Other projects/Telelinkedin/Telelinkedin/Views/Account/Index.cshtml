@model Telelinkedin.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "Personal Profile";
}

<h2>@ViewBag.Title</h2>

<fieldset>
    <legend>User Profile</legend>
    <div class="row-fluid">
        <div class="span12">

            <div class="display-field">
                <p>
                    <strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)
                </p>
            </div>

            <div class="display-field">
                <p>
                    <strong>@Html.DisplayNameFor(model => model.Email):</strong> @Model.Email
                </p>
            </div>
            <div>
                <p>
                    @if (string.IsNullOrEmpty(Model.APIKey))
                    {
                       <strong>@Html.ActionLink("Generate API Key", "Generate", new { Controller = "Account"}, new { @class = "btn" })</strong>
                    }
                    else
                    {
                        <strong>API Key: </strong>@Model.APIKey
                    }
                </p>
            </div>
            @Html.ActionLink("Edit personal details", "Edit", new { }, new { @class = "btn" })
            @Html.ActionLink("Change password", "Manage", new { }, new { @class = "btn" })
        </div>
    </div>
    <div class="row-fluid" style="margin-top: 20px;">
        <div class="span4 well">
            @Html.Partial("_JobsListing", Model.Jobs)
            @Html.ActionLink("Add or edit jobs", "Index", new { Controller = "Job" })
        </div>

        <div class="span4 well">
            @Html.Partial("_EducationListing", Model.Educations)

            @Html.ActionLink("Add or edit skills", "Index", new { Controller = "Education" })
        </div>

        <div class="span4 well">
            @Html.Partial("_SkillsListing", Model.Skills)

            @Html.ActionLink("Add or edit skills", "Index", new { Controller = "Skills" })
        </div>
    </div>

    <div class="row-fluid">
        <div class="span4 well">
            @Html.Partial("_RequestsListing", Model.Requests)
        </div>

        <div class="span4 well">
            @Html.Partial("_ConnectionsListing", Model.Connections)
        </div>
    </div>
</fieldset>
