@model Telelinkedin.ViewModels.ProfileViewModel

<h2>@ViewBag.Title</h2>

<fieldset>
    <legend>User Profile</legend>
    <div class="row-fluid">
        <div class="span12">
            @if (!Model.CanConnect)
            {
                <a class="btn disabled pull-right">Connect</a>
            }
            else
            {
                @Html.ActionLink("Connect", "Connect", new { Controller = "Request", id = @Model.Id }, new { @class = "btn pull-right"})
            }
            <div class="display-field">
                <p>
                    <strong>
                        @Html.DisplayNameFor(model => model.Name):
                    </strong>
                    @Html.DisplayFor(model => model.Name)
                </p>
            </div>

            <div class="display-field">
                <p>
                    <strong>
                        @Html.DisplayNameFor(model => model.Email):
                    </strong>

                    @Model.Email
                </p>
            </div>
        </div>
    </div>
    <div class="row-fluid" style="margin-top: 20px;">
        <div class="span4 well">
            @Html.Partial("_JobsListing", Model.Jobs)
        </div>
        <div class="span4 well">
            @Html.Partial("_EducationListing", Model.Educations)
        </div>

        <div class="span4 well">
            @Html.Partial("_SkillsListing", Model.Skills)
        </div>
    </div>
</fieldset>
